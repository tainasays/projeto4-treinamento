@model Tarefa;

<h1> Detalhes da Tarefa</h1>

<table class="table">
    <thead>
        <tr>

            <th>Id da Tarefa:</th>
            <th>Nome: </th>
            <th>Descrição:</th>
            <th>Data de Início:</th>
            <th>Status:</th>
            <th>Prazo:</th>
            <th>Prioridade:</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.TarefaId</td>
            <td>@Model.Nome</td>
            <td>@Model.Descricao</td>
            <td>@Model.DataRegistro</td>
            <td>@Model.Status</td>
            <td>@Model.PrazoDesejado</td>
            <td>@Model.Prioridade</td>

            <td><a asp-action="Index" class="btn btn-info">Voltar</a></td>

        </tr>
    </tbody>




</table>




