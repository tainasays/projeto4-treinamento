@model TarefaViewData

<h2>Editar Tarefa</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Tarefa.TarefaId" />

    <div class="form-group">
        <label asp-for="Tarefa.Nome" class="control-label"></label>
        <input asp-for="Tarefa.Nome" class="form-control" />
       
    </div>

    <div class="form-group">
        <label asp-for="Tarefa.Descricao" class="control-label"></label>
        <input asp-for="Tarefa.Descricao" class="form-control" />
        
    </div>



    <div class="form-group">
        <label asp-for="Tarefa.PrazoDesejado" class="control-label"></label>
        <input asp-for="Tarefa.PrazoDesejado" class="form-control" />
        
    </div>

 


    <div class="form-group">
        <label asp-for="Tarefa.Status" class="control-label"></label>
        <select class="form-control" asp-for="Tarefa.Status">
            @foreach (var status in Model.StatusOptions)
            {
                <option value="@status">@status</option>
            }
        </select>
      
    </div>


    <div class="form-group">
        <label asp-for="Tarefa.Prioridade" class="control-label"></label>
        <select class="form-control" asp-for="Tarefa.Prioridade">
            @foreach (var prioridade in Model.PrioridadeOptions)
            {
                <option value="@prioridade">@prioridade</option>
            }
        </select>
        
    </div>



    <button type="submit" class="btn btn-info">Adicionar</button>
    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
</form>
